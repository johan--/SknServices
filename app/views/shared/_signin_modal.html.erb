

<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title" id="myModalLabel">Please Sign In</h2>
            </div>


            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="well">
                            <%= form_tag( url_for(sessions_path),  class: 'modal-form', :authenticity_token => true  ) do |f| %>

                                <div class="form-group has-feedback">
                                    <label for="session_username" class="sr-only">Username</label>
                                    <input autofocus="autofocus" placeholder="Your Username" type="text" name="session[username]" id="session_username" class="form-control" required>
                                    <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
                                </div>


                                <div class="form-group has-feedback">
                                    <label for="session_password" class="sr-only">Password</label>
                                    <input type="password" class="form-control" name="session[password]" id="session_password" placeholder="Your Password" required>
                                    <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
                                </div>


                                <div class="form-control-static">
                                    <a href="/password_resets/new">forgotten password?</a>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input value="0" type="checkbox" name="session[remember_me_token]">
                                        <input value="1" type="checkbox" checked="checked" name="session[remember_me_token]" id="session_remember_me_token">
                                        <span class="add-on"> Remember me.</span>
                                    </label>
                                </div>

                                <button type="submit" name="commit" value="/<%= accessed_page %>" class="submit btn-default btn-block">Sign in</button>

                            <% end %>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

