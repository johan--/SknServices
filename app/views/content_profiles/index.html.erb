<% provide(:title, accessed_page_name) %>

<header class="page-header">
    <h1 class="text-center"><%= accessed_page_name %></h1>
</header>

<article>
  <% if current_user_has_create?('content_profiles/new') %>
      <%= link_to 'New Content profile', new_content_profile_path %>
  <% end %>

  <% if @page_controls.success %>
    <%= will_paginate @page_controls.content_profiles, class: "pagination col-md-3 col-md-push-9 pull-right" %>
    <div class="row">
        <%= render @page_controls.content_profiles %>
    </div>
    <%= will_paginate @page_controls.content_profiles, class: "pagination col-md-3 col-md-push-9 pull-right" %>
  <% else %>
    <h2 class="text-center lead">No Profiles Available, or System Error!</h2>
  <% end %>
</article>
