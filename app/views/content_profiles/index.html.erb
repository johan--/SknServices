<p id="notice"><%= notice %></p>

<h1>Listing Content Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Person authentication key</th>
      <th>Profile type</th>
      <th>Authentication provider</th>
      <th>Username</th>
      <th>Display name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_profiles.each do |content_profile| %>
      <tr>
        <td><%= content_profile.person_authentication_key %></td>
        <td><%= content_profile.profile_type %></td>
        <td><%= content_profile.authentication_provider %></td>
        <td><%= content_profile.username %></td>
        <td><%= content_profile.display_name %></td>
        <td><%= content_profile.email %></td>
        <td><%= link_to 'Show', content_profile %></td>
        <td><%= link_to 'Edit', edit_content_profile_path(content_profile) %></td>
        <td><%= link_to 'Destroy', content_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

