<% provide(:title, "Sign in") %>

<section class="container">
    <%= form_tag( url_for(sessions_path),  class: 'form-horizontal form' ) do |f| %>
        <fieldset>
            <legend><h3 class="text-center">Please sign in</h3></legend>

            <div class="form-group">
                <label for="session_username" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <input autofocus="autofocus" placeholder="your user name" type="text" name="session[username]" id="session_username" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="session_password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="session[password]" id="session_password" placeholder="Password">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="form-control-static">
                        <a href="/password_resets/new">forgotten password?</a>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input value="0" type="checkbox" name="session[remember_me_token]" type="hidden">
                            <input value="1" type="checkbox" checked="checked" name="session[remember_me_token]" id="session_remember_me_token">
                            <span class="add-on"> Remember me</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" name="commit" class="btn btn-default submit">Sign in</button>
                </div>
            </div>
        </fieldset>
    <% end %>
</section>
