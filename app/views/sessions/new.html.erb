<% provide(:title, "Sign in") %>

<%= simple_form_for :session, url: sessions_path, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <legend class="controls"><h3>Please sign in</h3></legend>
      <div class="form-group">
            <%= f.label :username, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :username, autofocus: true, hint: "your user name" %>
            </div>
      </div>
      <div class="form-group">
          <%= f.label :password,  class: "control-label" %>
          <div class="controls">
              <%= f.password_field :password %>
          </div>
      </div>
      <div class="form-group">
        <div class="controls">
        <%= link_to "forgotten password?", new_password_reset_path %>
        </div>
      </div>
      <div class="form-group">
          <div class="controls">
              <label class="checkbox">
                  <%= f.check_box :remember_me_token, :value => true, checked: true %>
                  <span class="add-on"> Remember me</span>
              </label>
          </div>
      </div>
      <div class="button-group">
          <div class="controls">
              <%= f.button :submit, "Sign in", :class => "btn btn-large btn-primary" %>
          </div>
      </div>
      </fieldset>
<% end %>
