<h1>Listing Content Type Opts</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Description</th>
      <th>Content type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_type_opts.each do |content_type_opt| %>
      <tr>
        <td><%= content_type_opt.value %></td>
        <td><%= content_type_opt.description %></td>
        <td><%= content_type_opt.content_type %></td>
        <td><%= link_to 'Show', content_type_opt %></td>
        <td><%= link_to 'Edit', edit_content_type_opt_path(content_type_opt) %></td>
        <td><%= link_to 'Destroy', content_type_opt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

