<%= simple_form_for(@content_profile_entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic_value %>
    <%= f.input :content_value %>
    <%= f.association :content_type %>
    <%= f.association :topic_type %>
    <%= f.association :content_profile %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
