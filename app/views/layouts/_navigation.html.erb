<%# navigation styled for Bootstrap 3.0 %>
<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to home_path, class: "navbar-brand" do %>
        <%= logo("logo") %>
      <% end %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <%= nav_link("About", about_path) %>
        </ul>

        <% if valid_user_has_access?('#Administration') %>
        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <% if valid_user_has_access?('users/new') %>
                        <%= nav_link_icon("glyphicon-user", "Add User", new_user_path) %>
                    <% end %>
                </ul>
            </li>
        </ul>
        <% end %>

        <% if logged_in? %>
        <ul class="nav navbar-nav">
            <%= nav_link("All Users", users_path) %>
        </ul>
        <% end %>

        <ul class="nav navbar-nav navbar-right">
            <li><%=
                link_to_if(logged_in?, "Sign out", signout_path, method: :delete) do
                link_to "Sign in", signin_path
                end
            %></li>
        </ul>
        <% if logged_in? %>
            <p class="navbar-text pull-right">Signed in as
                <a href="<%= user_path(current_user) %>">
                <span><i class="glyphicon glyphicon-user"></i>&nbsp;<%= current_user.name %></span></a>
            </p>
        <% end %>
    </div>
  </div>
</header>
