<%# navigation styled for Bootstrap 3.0 %>
<header class="row navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to home_pages_path, class: "brand-image" do %>
        <%= logo("logo") %>
      <% end %>
    </div>

    <div id="navbar" class="collapse navbar-collapse">

        <ul class="nav navbar-nav" role="tablist">
            <%= nav_link("About", about_pages_path) %>
            <% if current_user_has_access?('#Management') %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administration <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="tablist">
                        <% if current_user_has_access?('#Administration') %>
                            <% if current_user_has_access?('users/index') %>
                                <%= nav_link_icon("glyphicon-user", "Manage UserProfiles", users_path) %>
                            <% end %>
                        <% end %>

                        <% if current_user_has_access?('#ContentProfileManagement') %>
                            <% if current_user_has_access?('content_profiles/index') %>
                                <%= nav_link_icon("glyphicon-inbox", "Manage ContentProfiles", content_profiles_path) %>
                            <% end %>
                        <% end %>

                        <% if current_user_has_access?('#GroupManagement') %>
                            <% if current_user_has_access?('user_group_roles/index') %>
                                <%= nav_link_icon("glyphicon-lock", "Manage GroupRoles", user_group_roles_path) %>
                            <% end %>
                        <% end %>
                    </ul>
                </li>
                <% if current_user_has_access?('#Demonstration') %>
                    <% if current_user_has_access?('profiles/access_profile_demo') %>
                        <%= nav_link_icon("glyphicon-eye-open", "AccessProfile", access_profile_demo_profiles_path) %>
                    <% end %>
                    <% if current_user_has_access?('profiles/content_profile_demo') %>
                        <%= nav_link_icon("glyphicon-eye-open", "ContentProfile", content_profile_demo_profiles_path) %>
                    <% end %>
                <% end %>
            <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right" role="tablist">
            <li>
                <%=
                    link_to_if(authenticated?, "Sign out", signout_path, method: :delete) do
                    link_to "Sign in", signin_path
                    end
                %>
            </li>
        </ul>
        <% if authenticated? %>
            <p class="navbar-text navbar-right">Signed in as
                <a href="<%= user_path(id: current_user.id) %>">
                <span><i class="glyphicon glyphicon-user"></i>&nbsp;<small><%= current_user.name %></small></span></a>
            </p>
        <% end %>
    </div>
  </div>
</header>
