<?xml version="1.0"?>
<contentRegistry>
<!--
   config/content_registry.xml


   * REQUIRED RESOURCE SYNTAX **********************************************
                              ** Note: :options are now required for TopicOpts values

    <resource secured="true|false" content="true|false">
        <uri>anyString</uri>
        <description></description>
        <userdata></userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="RequiredCommaSepTopicValues">security-role-name</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    UserData Required format/syntax is:
       returns Array if value|value,...
       returns Hash  if key:value|key:value|...
       returns String if no reserve chars present
       Reserved chars: |:  # vertical-bar and semi-colon


-->
    <!--============================================================================= -->
    <!--================== Content RESOURCE REGISTRY  =============================== -->
    <!--============================================================================= -->

    <!--============== Content Access Adaptation  ========== -->
    <resource secured="true" content="true">
        <uri>Commission/Agency/PDF</uri>
        <description>Agency Commission Statements</description>
        <userdata>"doctype:954"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="0034,0037,0040">Test.Agency.Commission.Statement.PDF.Access</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>Commission/Agency/CSV</uri>
        <description>Agency Commission CSV Datafiles</description>
        <userdata>"doctype:955"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="0034,0037,0040">Test.Agency.Commission.Statement.CSV.Access</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>Experience/Agency/PDF</uri>
        <description>Agency Experience Statements</description>
        <userdata>"doctype:956"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="0034,0037,0040">Test.Agency.Commission.Experience.PDF.Access</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>Commission/Agency/99</uri>
        <description>Test where RoleName has no Options</description>
        <userdata>"doctype:956"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="0099">Test.Agency.Commission.Agency.PDF.Access</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>FileDownload/UserGroups/Pdf</uri>
        <description>Permission to Download PDF Files</description>
        <userdata>"directory_control:download/pdf/dev*.pdf"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="VendorSecondary,VendorPrimary,EmployeeSecondary,EmployeePrimary">Services.Action.Use.FileDownload.Pdf</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>FileDownload/UserGroups/Datafile</uri>
        <description>Permission to Download Data Files</description>
        <userdata>"directory_control:download/datafiles/dev*.dat|directory_control:download/datafiles/dev*.csv"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="VendorSecondary,VendorPrimary,EmployeeSecondary,EmployeePrimary">Services.Action.Use.FileDownload.Datafile</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

    <resource secured="true" content="true">
        <uri>FileDownload/Developers/Image</uri>
        <description>Permission to Download Image Files</description>
        <userdata>"directory_control:download/images/dev*.png|directory_control:download/images/dev*.jpg"</userdata>
        <permission type="READ">
            <authorizedRoles>
                <authorizedRole options="VendorSecondary,VendorPrimary,EmployeeSecondary,EmployeePrimary">Services.Action.Use.FileDownload.Image</authorizedRole>
            </authorizedRoles>
        </permission>
    </resource>

</contentRegistry>
